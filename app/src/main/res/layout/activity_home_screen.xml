<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeScreen"
        android:orientation="vertical"






>
    <TextView
            android:text="Brands List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/brands_list" android:gravity="center"
            android:height="40dp" android:background="#74B9FF" android:textColor="@android:color/black"
            android:textSize="20sp"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/brandsListView"/>
</LinearLayout>

