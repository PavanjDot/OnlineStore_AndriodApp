<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Signup_Activity" android:orientation="vertical">

    <ImageView android:layout_width="wrap_content" android:layout_height="239dp"
               android:src="@drawable/signup"

    />

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="#D6A2E8"
              android:hint=" Email "
              android:textSize="25sp"
              android:inputType="textEmailAddress"
              android:layout_margin="10dp"
              android:padding="5dp"

              android:drawableRight="@drawable/email_vector" android:id="@+id/Signup_Layout_edtEmail"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="#D6A2E8"
              android:hint=" Username "
              android:textSize="25sp"
              android:inputType="text"
              android:layout_margin="5dp"
              android:padding="5dp"

              android:drawableRight="@drawable/ic_account_circle_black_24dp"
              android:id="@+id/Signup_Layout_edtUsername"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="#D6A2E8"
              android:hint=" Password"
              android:textSize="25sp"
              android:inputType="textPassword"
              android:layout_margin="5dp"
              android:padding="5dp"

              android:drawableRight="@drawable/password_vector" android:id="@+id/Signup_Layout_edtPassword"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="#D6A2E8"
              android:hint=" Confirm password"
              android:textSize="25sp"
              android:inputType="textPassword"
              android:layout_margin="5dp"
              android:padding="5dp"

              android:drawableRight="@drawable/ic_done_black_24dp" android:id="@+id/Signup_Layout_edtConfirmPassword"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Signup"
            android:background="#82589F"
            android:textSize="24sp" android:textColor="@android:color/white" android:id="@+id/Signup_Layout_btnSignup"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Login"
            android:background="#82589F"
            android:textSize="24sp" android:textColor="@android:color/white" android:id="@+id/Signup_Layout_btnLogin"/>

</LinearLayout>